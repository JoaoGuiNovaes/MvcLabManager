@model IEnumerable<MvcLabManager.Models.Laboratory>

@{
    ViewData["Title"] = "Laboratórios";
}
<h1>@ViewData["Title"]</h1>

@if (Model.Count() == 0)
{
    <p>Nenhum laboratório cadastrado.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th> 
                <th>Número</th> 
                <th>Nome</th> 
                <th>Bloco</th>
                <th></th>
            </tr>

            <tbody>
                @foreach(var laboratory in Model)
                {
                    <tr>
                        <td>@laboratory.Id</td> 
                        <td>@laboratory.Number</td> 
                        <td>@laboratory.Name</td> 
                        <td>@laboratory.Block</td> 
                        <th>
                            <a href="/Laboratory/Show/@laboratory.Id">Ver</a>
                        </th>
                    </tr>
                }
            </tbody>

        </thead>
    </table>
}