@{
    ViewData["Title"] = "Atualizar um computador";
}

<div class="text">
    <h1>Atualizar as informações de um computador:</h1>
    <hr>
</div>


<form action="../UpdateResult" method="post">
    <table>
        <tr>
            <td>Digite o Id:</td>
            <td><input type="text" name="id" id="id" class="form-control" required></td>
        </tr>

        <tr>
            <td>Ram:</td>
            <td><input type="text" name="ram" id="ram" class="form-control" required></td>
        </tr>

        <tr>
            <td>Processador:</td>
            <td><input type="text" name="processor" id="processor" class="form-control" required></td>
        </tr>

        <tr>
            <td> <button type="submit" class="btn btn-primary">Enviar</button></td>
        </tr>

    </table>
</form>